@page 
@model ReminderHandler.Pages.Reminders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Reminders</h1>

<p>
    <a asp-page="Create">Create a New Reminder</a>
</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reminder[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reminder[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reminder[0].CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reminder[0].UpdatedDate)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reminder) {
        <tr>
            <td>
                <a class="nav-link text-dark" asp-area="" asp-page="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Title)</a>
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
