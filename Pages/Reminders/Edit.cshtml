@page
@model ReminderHandler.Pages.Reminders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reminder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reminder.ID" />
            <div class="form-group">
                <label asp-for="Reminder.Title" class="control-label"></label>
                <input asp-for="Reminder.Title" class="form-control" />
                <span asp-validation-for="Reminder.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.Description" class="control-label"></label>
                <input asp-for="Reminder.Description" class="form-control" />
                <span asp-validation-for="Reminder.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.CreationDate" class="control-label"></label>
                <input asp-for="Reminder.CreationDate" class="form-control" />
                <span asp-validation-for="Reminder.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.Content" class="control-label"></label>
                <input asp-for="Reminder.Content" class="form-control" />
                <span asp-validation-for="Reminder.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.Favorite" class="control-label"></label>
                <input asp-for="Reminder.Favorite" type="checkbox" />
                <span asp-validation-for="Reminder.Favorite" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
